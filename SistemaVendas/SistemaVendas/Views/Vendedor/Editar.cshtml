@model VendedorModel
<h2>Alterar de Vendedores</h2>

<br />

<form asp-controller="Vendedor" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try {@ViewBag.Vedendor.Id} catch { }" />

    <div class="form-group">
        <label>Nome:</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try {@ViewBag.Vedendor.Nome} catch { }" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input asp-for="Email" type="text" class="form-control" value="@try {@ViewBag.Vedendor.Email} catch { }" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>