@model ClienteModel

<h2>Excluir Cliente</h2>

<h3>Deseja realmente excluir o cliente <b>@Model.Nome</b>?</h3>
<button type="button" class="btn btn-danger" onclick="Nao()">Não</button>
<button type="button" class="btn btn-success" onclick="Sim()">Sim</button>

<script>
    function Sim()
    {
        window.location.href = '../../Cliente/ExcluirCliente/' + @Model.Id;
    }
    function Nao()
    {
        window.location.href = '../../Cliente/Index';
    }

</script>